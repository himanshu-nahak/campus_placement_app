<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">

    <title>Profile Description</title>
    <style>
        body{
            background-color: #071236;

        }
        .rowwidth {
            width: 1330px;
        }

        .col-3 {
            border: 1px solid black;
            background-color: #071236;
        }

        .col-9 {
            border: 1px solid black;
            background-color: #f8be8c;
        }

        .container {
            margin: 10px;
            margin-top: -30px;
        }

        .avatar {
            border-radius: 50%;
            width: 200px;
            height: 200px;
            margin-top: 40px;
            margin-bottom: 20px;
        }

        .col-sm-8 {
            text-align: center;
        }

        .centeritem {
            align-content: center;
            align-items: center;
            text-align: center;
            vertical-align: middle;
        }

        .display_inline {
            display: inline;
            margin-left: 15px;
        }

        .card-design {
            margin: 8px;
            background-image: url("images/icons/education\ card\ image.jpg");
            padding: 10px;
            text-indent: 15px;
        }

        label {
            font-size: 13px;
        }

        .hr1 {
            color: white;
        }

        .div-color {
            background-color: #F8BE8C;
        }

        .about-card {
            background-image: url("images/icons/aboutcardimage3.jpeg");
            margin: 3px;
            text-indent: 15px;
            padding: 10px;
            color: white;
            background-size: cover;
        }

        .about-card:hover, .card-design:hover{
            margin-left: 1rem;
        }


    </style>
    <link rel="stylesheet" href="/styles.css">
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link href="https://fonts.googleapis.com/css2?family=PT+Serif&display=swap" rel="stylesheet" />

</head>


<body bgcolor="black">
    <%- include("./partials/nav_student.ejs") %>
        <br>
        <div class="container">
            <div class="row rowwidth">
                <div class="col-3">

                    <div class="card" style="width: 19rem;">
                        <img src="images/icons/hn.jpg" class="card-img-top" alt="...">
                        <div class="card-body">
                            <p class="card-text centeritem"><b>
                                    <%= user.full_name %>
                                </b><br>
                                <%= user.usn %>
                            </p>
                        </div>
                    </div>
                    <hr class="hr1">
                    <div class="centeritem">
                        <img class="display_inline" src="images/icons/linkedin.png"
                            style="border-radius:50%;width: 35px;height: 40px;" alt="..">
                        <img class="display_inline" src="images/icons/browser.png"
                            style="border-radius:50%;width: 35px;height: 40px;" alt="..">
                        <img class="display_inline" src="images/icons/twitter.png"
                            style="border-radius:50%;width: 35px;height: 40px;" alt="..">
                        <img class="display_inline" src="images/icons/contactme1.png"
                            style="border-radius:50%;width: 35px;height: 40px;" alt="..">
                    </div>

                    
                    <hr class="hr1">
                    <div class="centeritem">
                        <a href="/upload_details" class="btn btn-primary">Edit My Profile</a>
                    </div>
                </div>
                <div class="col-9">
                    <div class="row centeritem" style="background-color:#972a20">
                        <div class="col-sm-8">
                            <h1 style="color: #f0f0f0;">Hello <%= user.full_name %>!</h1>
                        </div>
                        <div class="col-sm-4">
                            <img src="images/icons/hn.jpg" class="img-thumbnail avatar" alt="...">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <div class="div-color">
                                <hr>
                                <br>
                                <img class="display_inline" src="images/icons/profile image.png"
                                    style="border-radius:50%;width: 35px;height: 40px;" alt="..">
                                <h4 class="display_inline">About Me</h4>
                                <hr>
                                <h5>Personal Details</h5>
                            </div>

                            <div class="card about-card">
                                <p class="card-title"><b>Full Name : </b>
                                    <%= user.full_name %>
                                </p>
                            </div>
                            <div class="card about-card ">
                                <p class="card-title "><b>Gender :</b>
                                    <%= user.gender %>
                                </p>

                            </div>
                            <div class="card about-card">
                                <p class="card-title"><b>Date of Birth :</b>
                                    <%= user.dob %>
                                </p>
                            </div>

                            <div class="card about-card">
                                <p class="card-title"><b>Mobile :</b>
                                    <%= user.mobile %>
                                </p>
                            </div>
                            <div class="card about-card">
                                <p class="card-title"><b>Address : </b>
                                    <%= user.address %>
                                </p>
                            </div>
                            <div class="card about-card">
                                <p class="card-title"><b>RVCE Email :</b>
                                    <%= user.rvce_email %>
                                </p>
                            </div>
                            <hr>
                            <img class="display_inline" src="images/icons/education icon.png"
                                style="border-radius:50%;width: 35px;height: 40px;" alt="..">
                            <h4 class="display_inline">Education Details</h4>
                            <hr>
                            <div class="div-color">
                                <div class="card card-design">
                                    <p class="card-title"><b>Std 10 Percentage : <%= user.tenth_perc %></b></p>
                                    <label class="card-text">
                                        Std 10 Year of Passing : <%= user.tenth_yop %>
                                    </label>
                                </div>
                                <div class="card card-design">
                                    <p class="card-title"><b>Std 12 Percentage : <%= user.twelfth_perc %></b></p>
                                    <label class="card-text">
                                        Year of Passing : <%= user.twelfth_yop %>
                                    </label>
                                </div>

                                <div class="card card-design">
                                    <p class="card-title"><b> Degree : <%= user.graduation_degree %></b></p>
                                    <label class="card-text">
                                        Percentage : <%= user.graduation_perc %>

                                            <p>Year of Passing : <%= user.graduation_year %>
                                            </p>
                                    </label>
                                </div>
                                <div class="card card-design">
                                    <p class="card-title"><b>Post Graduation Degree : MCA </b></p>
                                    <label class="card-text">
                                        CGPA : <%= user.pg_cgpa %>

                                            <p>Year of Passing : 2022</p>
                                    </label>
                                </div>

                                <div class="card card-design">
                                    <p class="card-title"><b>Year Gaps : <%= user.year_gap %> </b></p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr>

                    <div class="row" style="margin: 10px;">
                        <div class="col-sm-12 ">
                            <img class="display_inline" src="images/icons/contactme1.png"
                                style="border-radius:50%;width: 50px;height: 40px;" alt="..">
                            <h4 class="display_inline">Contact Me</h4>
                        </div>
                        <hr>
                        <br>
                        <div class="col-sm-6">
                            <div class="card about-card">
                                <div class="card-body">
                                    <p class="card-title"><b>Phone</b></p>
                                    <p class="card-text">
                                        <%= user.mobile %>
                                    </p>
                                    <br>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="card about-card">
                                <div class="card-body">
                                    <p class="card-title"><b>Email</b></p>
                                    <p class="card-text">
                                        <%= user.personal_email %>
                                    </p>
                                    <p class="card-text">
                                        <%= user.rvce_email %>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="card about-card">
                                <div class="card-body">
                                    <p class="card-title"><b>Address</b></p>
                                    <p class="card-text">
                                        <%= user.address %>
                                    </p>
                                    <br>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br>
                </div>
            </div>
        </div>
        </div>







        <!-- Optional JavaScript; choose one of the two! -->

        <!-- Option 1: Bootstrap Bundle with Popper -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
            crossorigin="anonymous"></script>

