  <body>
    <%- include("./partials/nav_main.ejs") %>
    <br><br><br>
    <div class="loginsize">
        <div class="container">
            <div class="row">
              <div class="col logintheme">
                  <h4 style="margin-top: 50%;">Welcome To LOGIN Page </h4>
                  <p>This is your first step towards placement.<br>
                  In recruiting, there is no good or bad experiences - just learning experiences.</p>
              </div>
              <div class="col loginform">
                <center><h1> Student Login Form </h1></center>
                <img src="images/icons/profile image.png" alt="">
                <form class="form" action="/dashboard" method="POST">
                    <label>Username : </label>   
                        <input type="text" placeholder="Enter Username" name="username" class="form-control" required > <br> 
                        <label>Password : </label>   
                        <input type="password" placeholder="Enter Password" name="password" class="form-control" required> <br> 
                        <button type="submit" class="btn btn-danger" id="btn"> Login</button>   
                        <br><br>
                        <p>I need to create an account.</p>
                        <a href="/signup">New User? Sign up</a>                    
                </form>
              </div>
            </div>
        </div>
    </div>
    
            

