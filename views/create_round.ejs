<!DOCTYPE html>
<html>
<%- include("./partials/head.ejs") %>
	<%- include("./partials/nav_spc.ejs") %>

		<body>

			<div class="container">
				<h1> Create Round </h1>
				<form class="form" action="/Round_detail/<%= drive_id %>" method="POST" enctype="multipart/form-data">

					<label>Drive ID </label>
					<input type="text" name="d_id" class="form-control" value=" <%= drive_id %> "  disabled required> <br>

					<label>Round Number </label>
					<input type="number" min="1" max="10" placeholder="Enter Round Number" name="r_no"
						class="form-control" required> <br>

					<div class="form-group">
						<label>Round Name</label>
						<select class="form-control form-control-sm" name="r_name">
							<option>Coding Round</option>
							<option>Technical Round</option>
							<option>Interview Round</option>
							<option>HR Round</option>
							<option>Final Round</option>
						</select>
					</div>

					<div class="form-group">
						<label>Registration starting date</label>
						<input type="date" class="form-control" name="r_start" placeholder="MM/YYYY">
					</div>
					<div class="form-group">
						<label for="exampleInputPassword1">Registration Last date</label>
						<input type="date" class="form-control" name="r_end" placeholder="MM/YYYY">
					</div>

					<label>Upload Selected Students File : </label>
					<input type="file" placeholder="Upload XLSX" name="selected_student_file" class="form-control"
						required>
					<br>
					<button type="submit" class="btn btn-primary"> Upload</button>

				</form>

			</div>
		</body>

</html>