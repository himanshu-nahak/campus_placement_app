<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">

    <title>Rounds</title>
    <style>
        body{
            background-color: #5CD9FF;
        }
        header
        {
            background-color: #071236;
            height:100px;
            padding: 10px;
            color:white;    
        }
        .centeritem
        {
            align-content: center;
            align-items: center;
            text-align: center;  
            padding: 10px;
            vertical-align: middle;
            align-self:center;
        }     
        .table
        {
            width:1300px;
            height:100%;
            /* background-color: rgba(236, 65, 103, 1); */
            background-color: #B0FE76;
            align-self: center;
            box-shadow:3px solid #071236;
            padding: 30px;
        }
        a{
            color:black;
        }
        tr:hover{
            margin-left: 1rem;

            background-color: #81E979;

        }
    </style>
    <link rel="stylesheet" href="/styles.css">
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link
      href="https://fonts.googleapis.com/css2?family=PT+Serif&display=swap"
      rel="stylesheet"
    />
    
  </head>
  <body>
    <%- include("./partials/nav_spc.ejs") %>
    <header>
        
        <h1 class="centeritem">Round List</h1>
    </header>
    <div class="container">
            <h2> 
                <a href="/Round_detail/<%= drive_id %>" class="btn btn-primary ">Add New Round</a>
    
            </h2>
        
        <center><table class="table centeritem">
            <tr>
                <th>Round Number</th>
                <th>Round Name</th>
                <th>List of Students in Round</th>
                <th>Registration Start Date</th>
                <th>Registration End Date</th>
                <th>Action</th>
            </tr>
            <% if(rounds.length!=0){ var i=1; rounds.forEach(function(data){ %>
                <tr>
                    <td>
                        <%= data.Round_no %>
                    </td>
                    <td>
                        <%=data.Round_name %>
                    </td>
                    <td>
                        <a href="<%= data.selected_stud_list %>" class="btn btn-success">View List</a>
                            
                    </td>
                    
                    <td>
                        <%=data.Reg_start_date %>
                    </td>
                    <td>
                        <%= data.Reg_end_date %>
                    </td>
                    <td>
                        <a href="/delround/<%= data.drive_id %>/<%= data.Round_no %>" class="btn btn-danger">X</a>
                    </td>
                </tr>
                <% i++; }) %>
                    <% } else{ %>
                        <tr>
                            <td colspan="7">No Data Found</td>
                        </tr>
                        <% } %>

        </table></center>
    </div>

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
    <!--
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js" integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous"></script>
    -->
  </body>
</html>