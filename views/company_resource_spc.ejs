<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">

    <title>Placement Drive</title>
    <style>
        body{
            background-color: #5CD9FF;
        }
        header
        {
            background-color: #071236;
            height:100px;
            padding: 10px;
            color:white;    
        }
        .centeritem
        {
            align-content: center;
            align-items: center;
            text-align: center;  
            padding: 10px;
            vertical-align: middle;
            align-self:center;
        }     
        .table {
            width: 1320px;
            height: 100%;
            /* background-color: #c5ff53; */
            background-color: #CAA8F5;
            align-self: center;
            padding: 30px;
        }
        
        a {
            color: black;
        }

        tr:hover{
            background-color: #802392;
            color: #f0f0f0;
        }
    </style>
    <link rel="stylesheet" href="/styles.css">
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link
      href="https://fonts.googleapis.com/css2?family=PT+Serif&display=swap"
      rel="stylesheet"
    />
  </head>
  
  <body>
    <%- include("./partials/nav_spc.ejs") %>
    <header>
        
        <h1 class="centeritem">Company Resources</h1>
    </header>
    <div class="container">
        <h2> 
            <a class="btn btn-primary" href="/companyresourceadd">Add Company Resource</a>

        </h2>
        <center><table class="table centeritem">
            <tr>
                <th>Sl Number</th>
                <th>Company Name</th>
                <th>Download File</th>
                <th>Action</th>
            </tr>
            <% if(cr.length!=0){ var i=1; cr.forEach(function(cr_row){ %>
                <tr>
                    <td>
                        <%= i %>
                    </td>
                    <td>
                        <%=cr_row.com_name %>
                        
                    </td>
                    <td>
                        <a href="<%=cr_row.cr_name %>" class="btn btn-success">Download</a>
                    </td>
                    <td>        
                        <a href="delcr/<%=cr_row.com_name %>" class="btn btn-danger">X</a>
                    </td>
                    
                </tr>
                <% i++; }) %>
                    <% } else{ %>
                        <tr>
                            <td colspan="7">No Data Found</td>
                        </tr>
                        <% } %>

        </table></center>
    </div>

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
