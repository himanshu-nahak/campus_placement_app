<!DOCTYPE html>
<html>
    <%- include("./partials/head.ejs") %>
    <%- include("./partials/nav_student.ejs") %>

    <body>
        
        <div class="container">
            <h1> Student Resume </h1>
            <form class="form" action="/resume" method="POST" enctype="multipart/form-data">   
                    
                    <label>Upload Resume : </label>   
                    <input type="file" placeholder="Upload PDF" name="resume" class="form-control"  required > <br>  
                    <button type="submit"class="btn btn-primary"> Upload</button>   
                    <a href="/resume/<%= current_user_usn %>" class="btn btn-secondary">View Uploaded Resume </a>
            </form>   
            <h2>Preview</h2> 
            
            <% if (current_user[0].resume == '1') { %>
            <embed src="/resume/<%= current_user_usn %>" width="100%" height="600px" 
                type="application/pdf">

            <% }else { %>
            <h3>Resume not uploaded yet. Please upload to view it</h3>
            <% }%>
        </div>
    </body>
</html>