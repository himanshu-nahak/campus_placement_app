<body bgcolor="">
    <div class="container-fluid">
        <%- include("./partials/nav_student.ejs") %>
            <header class="centeritem">
                <h1> Student Resume </h1>
            </header><br>
            <div class="row">
                <div class="col-md-3">

                </div>
                <div class="col-md-6 align-self-center">

                    <form class="form" action="/resume" method="POST" enctype="multipart/form-data">
                        <img src="/images/icons/resume icon.png" height="300px"><br>

                        <h4>Upload Resume : </h4>
                        <input type="file" placeholder="Upload PDF" name="resume" class="form-control" required> <br>
                        <button type="submit" class="btn btn-primary"> Upload</button>
                        <a href="/resume/<%= current_user_usn %>" class="btn btn-secondary">View Uploaded Resume </a>
                    </form>
                </div>
                <div class="col-md-3">
                    
                </div>
            </div>
            <br>
            <div class="container-fluid d-flex justify-content-center">
                <hr>
                <h2 class="">Preview</h2>
                <hr>
                
            </div>
            <br>
            <div class="container">
                <embed class="margin" src="/resume/<%= current_user_usn %>" width="100%" height="600px" 
                    type="application/pdf">
            </div>
     
    </div>




